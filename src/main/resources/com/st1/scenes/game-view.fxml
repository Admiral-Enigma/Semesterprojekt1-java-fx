<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import com.st1.components.InventoryComponent?>
<?import javafx.scene.layout.BorderPane?>
<?import com.st1.components.MessagesComponent?>
<VBox alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="com.st1.controllers.StartController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <BorderPane prefHeight="700">
        <center>
            <VBox alignment="CENTER">
                <Label fx:id="welcomeText"/>

                <Button text="Hello!" onAction="#onHelloButtonClick"/>

            </VBox>

        </center>
        <bottom>
            <BorderPane >
                <left>
                    <InventoryComponent />
                </left>
                <right>
                    <MessagesComponent />
                </right>
            </BorderPane>
        </bottom>
    </BorderPane>
</VBox>
